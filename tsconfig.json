{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@entities/*": [
        "entities/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@/*": [
        "*"
      ],
    },
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}